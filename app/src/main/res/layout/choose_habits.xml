<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:paddingTop="15dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="33dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Choose habits in which you want to develop"
        android:textColor="#F5f5f5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnHabit1"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/primary_button"
        android:textColor="@color/main_text"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Education"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton

        android:id="@+id/btnHabit2"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/primary_button"
        android:textColor="@color/main_text"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:text="Personal development"
        app:layout_constraintBottom_toTopOf="@+id/btnHabit3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHabit1" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:textColor="@color/main_text"
        android:gravity="center"
        android:textSize="18sp"
        android:id="@+id/btnHabit3"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/primary_button"
        android:text="Sport"
        app:layout_constraintBottom_toTopOf="@+id/btnHabit4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHabit2" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:textColor="@color/main_text"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:id="@+id/btnHabit4"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/primary_button"
        android:text="Programming"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHabit3" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/main_text"
        android:gravity="center"
        android:backgroundTint="@color/primary_button"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>